<table>
  <tr>
    <th><a href="?sort_by=brand_id">Marca</a></th>
    <th><a href="?sort_by=name">Nombre</a></th>
    <th><a href="?sort_by=type">Tipo</a></th>
    <th><a href="?sort_by=name">Tags</a></th>
    <th colspan="3"></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= h product.brand.name %></td>
    <td><%= h product.name %></td>
    <td><%= h product.type %></td>
    <td><%== display_tags product %></td>
    <td><%= link_to 'Mostrar', :action => 'show', :id => product %></td>
    <td><%= link_to 'Editar', :action => 'edit', :id => product  %></td>
    <td><%= button_to 'Eliminar', { :action => 'destroy', :id => product },
                      :confirm => "¿Desea borrar el producto #{product.name}?" %></td>
  </tr>
<% end %>
</table>
<br/>
<%= will_paginate @products, :page_links => false, :link_separator => ' | ',
                          :previous_label => 'Anterior', :next_label => 'Siguiente' %>
<p><%= link_to 'Añadir producto', :action => 'new' %></p>
