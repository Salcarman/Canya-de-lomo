<dl>
  <dt>Nombre</dt>
  <dd><%= @user.name %></dd>

  <dt>Login</dt>
  <dd><%= @user.login %></dd>

  <dt>E-mail</dt>
  <dd><%= @user.email %></dd>

  <dt>Número de accesos</dt>
  <dd><%= @user.login_count %></dd>

  <dt>Último acceso</dt>
  <dd><%= @user.last_request_at.localtime.strftime("%d-%m-%Y %H:%M:%S") %></dd>

  <% if @user.last_login_at %>
    <dt>Último inicio de sesión</dt>
    <dd><%= @user.last_login_at.localtime.strftime("%d-%m-%Y %H:%M:%S") %></dd>
  <% end %>

  <dt>Inicio de sesión actual</dt>
  <dd><%= @user.current_login_at.localtime.strftime("%d-%m-%Y %H:%M:%S") %></dd>

  <% if @user.last_login_ip %>
    <dt>IP del último inicio de sesión</dt>
    <dd><%= @user.last_login_ip %></dd>
  <% end %>

  <dt>IP de inicio de sesión actual</dt>
  <dd><%= @user.current_login_ip %></dd>
</dl>

<%= link_to 'Editar', :action => 'edit' %>
